<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Dokter       : "
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_idDokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D01"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Spesialis         : "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_idSpesialis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SP01"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Dokter     : "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_namaDokter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mawar"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin   : "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir    : "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-08-12"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat                : "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ds. Kepongpongan Kec Talun"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomer HP          : "
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_noHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-08-12"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>